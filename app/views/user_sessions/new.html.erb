<%= stylesheet_pack_tag 'management' %>

<h1>
  <%= GameConfig.get('game_name') || 'The Coding Game' %>
</h1>

<div class="login-container">
  <h2>Log In</h2>

  <%= form_tag user_sessions_path, method: :post do %>
    <div class="field">
      <%= label_tag "Username" %><br />
      <%= text_field_tag :email %>
    </div>
   <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
  <% end %>
</div>
